# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default is Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# These files need to be LF only as they are generated by the build and it outputs in LF.
[{extensions/vscode/gui/index.html,extensions/vscode/continue_rc_schema.json}]
end_of_line = lf
